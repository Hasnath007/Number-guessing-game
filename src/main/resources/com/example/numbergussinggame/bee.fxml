<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns="http://javafx.com/javafx/24.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.numbergussinggame.BEE"
            prefHeight="500.0" prefWidth="700.0">

    <Label alignment="CENTER" layoutX="220.0" layoutY="56.0" text="Leaderboard">
        <font>
            <Font size="24.0"/>
        </font>
    </Label>

    <TableView fx:id="leaderboardTable" layoutX="187.0" layoutY="109.0"
               prefHeight="200.0" prefWidth="300.0">
        <columns>
            <TableColumn fx:id="nameColumn" text="Name" prefWidth="150.0"/>
            <TableColumn fx:id="scoreColumn" text="Score" prefWidth="150.0"/>
        </columns>
    </TableView>

    <Button fx:id="backButton" layoutX="250.0" layoutY="351.0"
            text="Back To Game" onAction="#backToGame">
        <font>
            <Font size="24.0"/>
        </font>
    </Button>

</AnchorPane>
